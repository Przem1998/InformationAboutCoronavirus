                    <TextBlock Text="Więcej informacji na stronie:" FontSize="15" Margin="0,5,0,0"/>
                    <HyperlinkButton Content=" koronawirusstatystyka.pl" NavigateUri="https://koronawirusstatystyka.pl/swiat.php"/>
                </StackPanel>
               

                <Image Source="Assets/World.jpeg" Width="600" Height="400" Margin="30"/>
            </StackPanel>

        </StackPanel>
